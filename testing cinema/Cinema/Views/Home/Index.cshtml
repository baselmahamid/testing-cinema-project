<body>

    <div class="head">
        <h1>
            Welcome To AB Cinema
        </h1>
    </div>

    <a class="asp" asp-action="YourOrders" asp-controller="Home" asp-route-id="@ViewBag.us">Cart<i class='fas fa-shopping-cart'></i></a>

    @using (Html.BeginForm("Index1", "Home", FormMethod.Post))
    {


<select name="h1">
    <option >Category</option>
    <option value="1">Action</option>
    <option value="2">Drama</option>
    <option value="3">Comedy</option>
    <option value="4">Kids</option>
    <option value="5">Romance</option>

</select>

        <input type="submit" value="sort">


    }

    @using (Html.BeginForm("Index1", "Home", FormMethod.Post))
    {
<select name="h1">
    <option >Rating</option>
    <option value="6">Higher</option>
    <option value="7">Lower</option>

</select>

        <input type="submit" value="sort">
    }
        <table id="table">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Movie_Name)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.category)
                    </th>

                    <th>

                        @Html.DisplayNameFor(model => model.MoivePicture)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Cshow)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Rating)
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>

                            @Html.DisplayFor(modelItem => item.Movie_Name)
                        </td>
                        <td>

                            @Html.DisplayFor(modelItem => item.category)
                        </td>

                        <td>
                            <img src="@item.MoivePicture" width="100" height="100" asp-append-version="true" />
                        </td>
                        <td>

                            @Html.DisplayFor(modelItem => item.Cshow)
                        </td>
                        <td>

                            @Html.DisplayFor(modelItem => item.Rating)
                        </td>
                        <td>
                            <a asp-controller="Home" asp-action="Details" asp-route-id="@item.Id">More Details</a>

                        </td>
                    </tr>
                }
            </tbody>
        </table>

    </body>
