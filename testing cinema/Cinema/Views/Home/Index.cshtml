@model IEnumerable<Cinema.Models.MovieDetails>

@{
    ViewData["Title"] = "AB Cinema";
}

<h1>Welcome To AB Cinema</h1>

<a asp-action="YourOrders" asp-controller="Home" asp-route-id="@ViewBag.us">Your Order Details</a>


<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Movie_Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.category)
            </th>

            <th>

                @Html.DisplayNameFor(model => model.MoivePicture)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Cshow)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Rating)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Movie_Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.category)
            </td>

            <td>
                <img src="@item.MoivePicture" width="100" height="100" asp-append-version="true" />
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Cshow)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Rating)
            </td>
            <td>
                <a asp-controller="Home" asp-action="Details" asp-route-id="@item.Id">More Details</a>

            </td>
        </tr>
        }
    </tbody>
</table>
