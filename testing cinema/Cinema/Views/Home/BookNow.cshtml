@model Cinema.Models.ViewModels.BookNowViewModel

@{
    ViewData["Title"] = "BookNow";
}

<h1>BookNow</h1>

<a asp-action="checkseat" asp-controller="Home">Check to Cart</a>|   
    <a asp-action="" asp-controller="">Your Order Details</a>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="BookNow">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Movie_Name" class="control-label"></label>
                @Model.Movie_Name
                <span asp-validation-for="Movie_Name" class="text-danger"></span>
            </div>

            <label for="Seats">Choose a Seat:</label>
            <select name="cars" id="cars">
                @for (int i = 1; i < 10; i++)
                {

                    <option value="volvo">@i</option>
                }
            </select>

                <div class="form-group">
                    <input type="submit" value="Add to Cart" class="btn btn-primary" />
                </div>
            </form>
    </div>
</div>

<div>
    @TempData["Sucess"]

    <a asp-action="Details">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
