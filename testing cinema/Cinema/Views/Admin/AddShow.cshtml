@model Cinema.Models.ViewModels.MovieDetailsViewmodel

@{
    ViewData["Title"] = "AddShow";
}


<head>
    <style>
        body {
            background-image: url('https://wallpaperaccess.com/full/1561985.jpg');
            background-size: cover;
            background-attachment: fixed;
        }

        /* this class for the titles*/
        .control-label {
            font-family: Georgia, Times New Roman, serif;
            color: #f1b906;
            font-size: 20px;
        }

        .header {
            font-family: Georgia, Times New Roman, serif;
            font-size: 35px;
            text-align: center;
            line-height: 1.5em;
            padding-bottom: 45px;
            text-transform: uppercase;
            letter-spacing: 2px;
            color: #989797;
        }

        .back {
            color: #fff;
            font-size: 20px;
        }


    </style>
</head>

<h1 class="header">Add Show Time</h1>

<div class="row">
    <div class="col-md-4">
        <form asp-action="AddShow">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>



            <div class="form-group">
                <label asp-for="Hall" class="control-label"></label>
                <input asp-for="Hall" class="form-control" />
                <span asp-validation-for="Hall" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Seat" class="control-label"></label>
                <input asp-for="Seat" class="form-control" />
                <span asp-validation-for="Seat" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DateAndTimeS" class="control-label"></label>
                <input asp-for="DateAndTimeS" class="form-control" />
                <span asp-validation-for="DateAndTimeS" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DateAndTimeE" class="control-label"></label>
                <input asp-for="DateAndTimeE" class="form-control" />
                <span asp-validation-for="DateAndTimeE" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Cost" class="control-label"></label>
                <input asp-for="Cost" class="form-control" />
                <span asp-validation-for="Cost" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Add" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a class="back" asp-action="admin">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
