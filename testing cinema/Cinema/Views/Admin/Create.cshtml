@model Cinema.Models.ViewModels.MovieDetailsViewmodel

@{ ViewData["Title"] = "Create"; }




<head>
    <style>

        body {
            background-image: url('https://wallpaperaccess.com/full/1561985.jpg');
            background-size: cover;
            background-attachment: fixed;
        }

        /* this class for the titles*/
        .control-label {
            font-family: Georgia, Times New Roman, serif;
            color: #f1b906;
            font-size: 20px;
        }

        .header {
            font-family: Georgia, Times New Roman, serif;
            font-size: 35px;
            text-align: center;
            line-height: 1.5em;
            padding-bottom: 45px;
            text-transform: uppercase;
            letter-spacing: 2px;
            color: #989797;
        }

        .back {
            color: #fff;
            font-size: 20px;
            
        }
        .data {
            font-family: Georgia, Times New Roman, serif;
            color: #f1b906;
        }

    </style>
</head>
<h1 class="header">Create</h1>
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create" method="post" enctype="multipart/form-data" asp-controller="Admin">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Movie_Name" class="control-label"></label>
                <input asp-for="Movie_Name" class="form-control" />
                <span asp-validation-for="Movie_Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Movie_Details" class="control-label"></label>
                <input asp-for="Movie_Details" class="form-control" />
                <span asp-validation-for="Movie_Details" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="category" class="control-label"></label>
                <input asp-for="category" class="form-control" />
                <span asp-validation-for="category" class="text-danger"></span>
            </div>


            <div class="form-group">
                <label asp-for="Age" class="control-label"></label>
                <input asp-for="Age" class="form-control" />
                <span asp-validation-for="Age" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Rating" class="control-label"></label>
                <input asp-for="Rating" class="form-control" />
                <span asp-validation-for="Rating" class="text-danger"></span>
            </div>
           
            <div class="form-group">
                <label asp-for="MoviePicture" class="control-label"></label>
                <input type="file" name="files" multiple asp-for="MoviePicture" />
                <span asp-validation-for="MoviePicture" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Add" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
<div class="data">
    @TempData["sucess"]
</div>
<div>
    <a class="back" asp-controller="Home" asp-action="Index">Back to List</a>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
