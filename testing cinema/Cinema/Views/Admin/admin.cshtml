@model IEnumerable<Cinema.Models.MovieDetails>

@{
    ViewData["Title"] = "admin";
}

<h1>Welcome Admin</h1>

<p>
    <a asp-action="Create">Add New Movie</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Movie_Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.category)
            </th>
           
            
            <th>

                @Html.DisplayNameFor(model => model.MoivePicture)
            </th>
            
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Movie_Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.category)
                </td>
              
                <td>
                    <img src="@item.MoivePicture" width="100" height="100" asp-append-version="true" />
                </td>
               
                <td>
                    <a asp-action="AddShow" asp-route-id="@item.Id">AddShow</a>|
                    <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
